<br />

<div class="booyah-box col-10 offset-1">
  <h1 class = "text-center"><%= @course.title %></h1>
    <br />
    <div class ="text-center">
      <%= image_tag @course.avatar.to_s, class: 'img-fluid' %>
    </div>
    <br />
    <br />
    <br />
    <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary' %>
      <div class = "row text-center">
        <div class ="col">
          <%= @course.description %>
        </div>
        <div class ="col">
          <span class="badge badge-success">
            <%= number_to_currency @course.cost %>
          </span>
        </div>
      </div>
    <br />
    <i><h2 class = "text-center"> Class Sections </h2></i>
    <br />
      <div class ="row">
        <div class = "col">
          <% @course.sections.each do |section| %>
          <div class="section">
            <h3><%= section.title %></h3>
              <div class="row">
                <% section.lessons.each do |lesson| %>
                  <div class ="col-12 col-sm-6">
                    <div class ="lesson text-center">
                      <%= link_to lesson_path(lesson) do %>
                        <b><%= lesson.title %></b>
                        <br />
                        <%= lesson.subtitle %>
                      <% end %>
                    </div>
                  </div>
                <%end%>
              </div>
              <br class="clr" />
          </div>
          <%end%>
        </div>  
      </div>
      <br />
      <br />
<% if current_user && current_user == @course.user %>
  <%= link_to 'Administrator', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
<% end %>
  </div>
</div>

