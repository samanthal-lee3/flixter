<br />

<div class = "booyah-box col-10 offset-1">
  <h1 class = "text-center"><%= @course.title %></h1>
  <br />
  <div class="text-center">
  <%= link_to 'Preview as a Student...', course_path(@course), class: 'btn btn-warning' %>
  <br />
  <br />
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-large' %>

    <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class ='clr'/>
      </li>
    <%end%>
  </ul>
  </div>

  <br />
  <h2 class = "text-center"><%= @course.description %></h2>
  <h3 class = "text-center">$<%= @course.cost %></h3>
</div>
